  "version": "1.0.0",
  "compatibility": {
    "minimum": "12",
    "verified": "12"
  },
  "authors": [
    {
      "name": "Scheffi",
      "url": "https://ko-fi.com/scheffi",
      "flags": {}
    }
  ],
  "esmodules": ["scripts/dm-whisper.js"],
  "languages": [
    {
      "lang": "en",
      "name": "English",
      "path": "lang/en.json"
    },
    {
      "lang": "de",
      "name": "Deutsch",
      "path": "lang/de.json"
    }
  ],
  "settings": [
